@inject IHttpContextAccessor httpContextAccessor;
@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10390916_PROG_POE.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ClaimSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @* <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@

                        @if ((httpContextAccessor.HttpContext.Session.GetInt32("UserID") != null) && (httpContextAccessor.HttpContext.Session.GetInt32("UserID") != -1))
                        {
                            @if (httpContextAccessor.HttpContext.Session.GetString("UserRole") == "Manager")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Claims" asp-action="ReviewClaims">Review Claims</a>
                                </li>
                            }

                            @if (httpContextAccessor.HttpContext.Session.GetString("UserRole") == "Lecturer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Claims" asp-action="SubmitClaim">Submit Claim</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Claims" asp-action="YourClaims">Your Claims</a>
                                </li>
                            }

                            <li class="nav-item ms-auto">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Login">Log out</a>
                            </li>

                        }

                        @if ((httpContextAccessor.HttpContext.Session.GetInt32("UserID") == null) || (httpContextAccessor.HttpContext.Session.GetInt32("UserID") == -1))
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="SignUp">Sign Up</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - ST10390916_PROG_POE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
